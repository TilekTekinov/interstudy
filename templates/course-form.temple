{% (def subject (args :subject)) %}
<form class="box ok">
  <h4>Editing subject {{ (subject :name) }} with code {{ (subject :code) }}
  <label for='active'>
	Active
    <input type='checkbox' name='active' id='active' {- (if (subject :active) "checked") -}/>
  </label>
  <button data-on:click="@post('/courses/{{ (subject :code) }}', {contentType: 'form'})">Save</button>
</form>
