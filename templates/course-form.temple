{% (def subject (args :subject)) %}
<form data-on:submit="@post('/course/{{ (subject :code) }}')" class="box ok">
  <h4>Editing subject {{ (subject :name) }} with code {{ (subject :code) }}
  <label for='active'>
	Active
    <input type='checkbox' name='active' id='active' value='{- (subject :active) -}'/>
  </label>
  <button>Save</button>
</form>
